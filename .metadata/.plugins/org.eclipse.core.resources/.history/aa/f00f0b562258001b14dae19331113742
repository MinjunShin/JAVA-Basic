package chapter2;

public class Variable1 {
	public static void main(String[] args) {
	
		
		
		for(int i = 0; i < 4 ; i++) {
			
			for(int blk = 3; blk - i > 0 ; blk--) {
				System.out.print(" ");
			}
			
			for(int star = 1; star <= (i*2+1) ; star++) {
				System.out.print("*");	

			}
			System.out.println("");
		}
	}
}


//* : 1 -> 3 -> 5 -> 7
//' ' : 3 -> 2 -> 1 -> 0 


// 0 1 2 3 : i
// 1 3 5 7 : star
// 1 2 3 4 
// i * 2 + 1